<div class="cover mb-4 d-flex align-items-center justify-content-center">
   <div class="text-center text-white">
   <h1>Bienvenue</h1>
   </div>
</div>


<div class="container">
  <div class="mb-4 d-flex align-items-center justify-content-between">
    <h2>My Lists</h2>
    <%= link_to "Create a movies list", new_list_path, class: "buttom btn-index"%>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4">
        <%= link_to list_path(list), class: "text-decoration-none" do %>
          <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
