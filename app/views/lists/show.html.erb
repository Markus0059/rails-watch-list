<h1>My List : <%= @list.name %></h1>
<div class="container">
<div class="row">



  <% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <div class="col-4" >
    <div class="card-body" style="width: 24rem;">
    <%= image_tag movie.poster_url, alt: movie.title, class: "card-img-top" %>
      <h5 class="card-title"><strong><%= movie.title %></strong></h5>
      <p class="card-text"><%= movie.overview %></p>
      <p class="card-text"><strong><em>"<%= bookmark.comment %>"</em></strong></p>
      <%= link_to "Delete", bookmark_path(bookmark), method: :delete %>
    </div>
</div>

  <% end %>


</div>
</div>


<%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-success"%>
<%= link_to "all list", root_path, class: "btn btn-success"%>
<%= link_to "New list ", new_list_path, class: "btn btn-success"%>
